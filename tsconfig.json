{
  "compilerOptions": {
    "target": "es2020",
    "types": ["node", "jest"],
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "lib",
    "strict": true
  },
  "include": ["src"],                                               
  "exclude": ["node_modules", "**/__tests__/*"]
}